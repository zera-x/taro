  %head
    %meta{:charset => "utf-8"}
    %meta{:http-equiv => "X-UA-Compatible", :content => "IE=edge"}
    %meta{:name => "viewport", :content => "width=device-width, intial-scale=1"}
    %title Taro
    %link{:rel => "stylesheet", :href => url_for("/css/bootstrap.min.css")}
