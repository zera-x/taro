    .container
      = yield
    %script{:src => url_for("/js/jquery.min.js")}
    %script{:src => url_for("/js/underscore-min.js")}
    %script{:src => url_for("/js/bootstrap.min.js")}
    %script{:src => url_for("/js/util.js")}
    %script{:src => url_for("/js/app.js")}
    %script{:type => "text/javascript", :src => url_for("/js/api.js?#{Time.now.to_i}")}
